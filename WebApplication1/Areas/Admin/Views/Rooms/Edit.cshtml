@model DataAccess.Model.Room
@{
    ViewBag.Title = "Úprava místnosti";
}

@section Breadcrumbs
{
    <ul class="breadcrumbs-list">
        <li class="breadcrumbs-label">Nacházíte se zde:</li>
        <li><a href="@Url.Action("Index", "Rooms")">Místnosti</a><i class="fa fa-angle-right"></i></li>
        <li class="current">@ViewBag.Title</li>
    </ul>
}

@using (Html.BeginForm("Update", "Rooms", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id) @* Předáme si původní Id místnosti *@

    <div class="form-group">
        <label class="col-sm-2 control-label">Název místnosti</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-sm-2 control-label">Ilustrace místnosti</label>
        <div class="col-sm-10">
            <input type="file" name="roomImage"/>
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-sm-2 control-label">Krátký popis</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.ShortDescription, new {@class = "form-control tinymce"})
        </div>
    </div>      

    <br />
    <br />

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Upravit místnost</button>
        </div>
    </div>
}