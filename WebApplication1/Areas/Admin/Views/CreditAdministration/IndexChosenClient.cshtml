@model DataAccess.Model.FitnessCentreUser
@{
    ViewBag.Title = "Správa kreditu";
}

@using (Html.BeginForm("UpdateCredit", "CreditAdministration", FormMethod.Post, new { @class = "form-horizontal" }))
{   
    <input type="text" name="clientId" value="@Model.Id" hidden="hidden"/>
    
    <div class="form-group">
        <label class="control-label col-xs-2">Klient</label>
        <div class="col-xs-10">
            <input type="text" class="form-control" value="@Model.NameWithId" disabled="disabled">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-xs-2">Kredit</label>
        <div class="col-sm-10">
            <div class="input-group">
                @Html.TextBoxFor(x => x.Credit, new { @class = "form-control", Name = "addedCredit", Value = "0" })
                @Html.ValidationMessageFor(x => x.Credit)
                <span class="input-group-addon">Kč</span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-warning pull-right margin-left"><span class="glyphicon glyphicon-plus"></span> Připsat kredit</button>
            <a href="@Url.Action("Index", "Clients")" class="btn btn-danger pull-right"><span class="glyphicon glyphicon-remove"></span> Zrušit</a>
        </div>
    </div>
}