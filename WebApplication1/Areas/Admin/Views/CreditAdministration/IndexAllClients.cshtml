@model DataAccess.Model.FitnessCentreUser
@{
    ViewBag.Title = "Správa kreditu";
}

@using (Html.BeginForm("UpdateCredit", "CreditAdministration", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <label class="col-sm-2 control-label">Klient</label>
        <div class="col-sm-10">
            @Html.DropDownList("clientId", new SelectList(ViewBag.ListClients, "Id", "NameWithId"), new{@class="form-control"})
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-xs-2">Kredit</label>
        <div class="col-sm-10">
            <div class="input-group">
                @Html.TextBoxFor(x => x.Credit, new { @class = "form-control", Name = "addedCredit", Value = "0" })
                @Html.ValidationMessageFor(x => x.Credit)
                <span class="input-group-addon">Kč</span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-warning pull-right"><span class="glyphicon glyphicon-plus"></span> Připsat kredit</button>
        </div>
    </div>
}