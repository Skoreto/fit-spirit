@using DataAccess.Model
@model List<Lesson>
@{
    ViewBag.Title = "Panel událostí";
    Layout = null;
}

<div class="section-content">
    <!-- Pokud je vypsáno méně než 5 lekcí, vykreslí kalendář pouze do tohoto počtu lekcí. -->
    @if (Model.Count >= 5)
    {
        for (int i = 0; i < 5; i++)
        {
            Lesson lesson = Model[i];

            <div class="event-item">
                <p class="date-label">
                    <span class="month">@lesson.StartTime.ToString("MMMM").Substring(0, 3)</span>
                    <span class="date-number">@lesson.StartTime.ToString("ddd d.")</span>
                </p>
                <div class="details ">
                    <h4 class="title">@lesson.ActivityType.Name</h4>
                    <p class="time">
                        <i class="fa fa-clock-o"></i>@lesson.StartTime.ToString("H:mm") - @lesson.EndTime.ToString("H:mm")
                    </p>
                    <p class="location">
                        <i class="fa fa-map-marker"></i>@lesson.Room.Name
                    </p>
                </div>
            </div>
        }
    }
    else
    {
        for (int i = 0; i < Model.Count; i++)
        {
            Lesson lesson = Model[i];

            <div class="event-item">
                <p class="date-label">
                    <span class="month">@lesson.StartTime.ToString("MMMM").Substring(0, 3)</span>
                    <span class="date-number">@lesson.StartTime.ToString("ddd d.")</span>
                </p>
                <div class="details ">
                    <h4 class="title">@lesson.ActivityType.Name</h4>
                    <p class="time">
                        <i class="fa fa-clock-o"></i>@lesson.StartTime.ToString("H:mm") - @lesson.EndTime.ToString("H:mm")
                    </p>
                    <p class="location">
                        <i class="fa fa-map-marker"></i>@lesson.Room.Name
                    </p>
                </div>
            </div>
        }
    }
    <a class="read-more" href="@Url.Action("Index", "Lessons", new { isActive = true })">Všechny lekce<i class="fa fa-chevron-right"></i></a>
</div>
