@model DataAccess.Model.FitnessCentreUser
@{
    ViewBag.Title = "Registrace";
    Layout = "~/Views/Shared/_LayoutSideless.cshtml";
}

<div class="text-center">
    <h2>Registrace</h2>  
</div>

@using (Html.BeginForm("Add", "Registration", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="form-group margin-top">
        <label class="col-sm-3 control-label">Jméno</label>
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.FirstName)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 control-label">Příjmení</label>
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.LastName, new {@class = "form-control"})
            @Html.ValidationMessageFor(x => x.LastName)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 control-label">Heslo</label>
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
            @Html.ValidationMessageFor(x => x.Password)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 control-label">Ulice</label>
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.Street, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Street)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 control-label">Město</label>
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.City)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 control-label">PSČ</label>
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.PostCode, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.PostCode)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 control-label">E-mail</label>
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", type = "email", placeholder="jmeno@domena.cz" })
            @Html.ValidationMessageFor(x => x.Mail)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 control-label">Telefon</label>
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.Telephone, new { @class = "form-control", type = "tel", placeholder = "+420 xxx xxx xxx" })
            @Html.ValidationMessageFor(x => x.Telephone)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 control-label">Foto</label>
        <div class="col-sm-6">
            <input type="file" name="profilePhoto"/>
            <span class="help-block">Doporučen rozměr 200x200px.</span>
        </div>
    </div>

    <div class="form-group">
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Registrovat</button>
        </div>
    </div>
}